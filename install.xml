<modification>
  <name>Add Login Button Facebook on Login Page And Checkout Page</name>
  <code>Add Login Button Facebook on Login Page And Checkout Page</code>
  <version>1.0</version>
  <author>Davidev</author>
  <link>http://www.davidev.it</link>
	<file path="catalog/controller/account/login.php">
		<operation>
			<search index="0"><![CDATA[$this->response->setOutput($this->load->view('account/login', $data));]]></search>
			<add position="before"><![CDATA[
            $data['fb_login'] = $this->load->controller('extension/module/fb_login');
			]]></add>
		</operation>
	</file>
    <file path="catalog/view/theme/*/template/account/login.twig">
		<operation>
			<search index="0"><![CDATA[<input type="submit" value="{{ button_login }}" class="btn btn-primary" />]]></search>
			<add position="after"><![CDATA[
            {{ fb_login }}
			]]></add>
		</operation>
	</file>
	<file path="catalog/controller/checkout/login.php">
		<operation>
			<search index="0"><![CDATA[$this->response->setOutput($this->load->view('checkout/login', $data));]]></search>
			<add position="before"><![CDATA[
            $data['fb_login'] = $this->load->controller('extension/module/fb_login');
			]]></add>
		</operation>
	</file>
	<file path="catalog/view/theme/*/template/checkout/login.twig">
		<operation>
			<search index="0"><![CDATA[<input type="button" value="{{ button_login }}" id="button-login" data-loading-text="{{ text_loading }}" class="btn btn-primary" />]]></search>
			<add position="after"><![CDATA[
            {{ fb_login }}
			]]></add>
		</operation>
	</file>
</modification>